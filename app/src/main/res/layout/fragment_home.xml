<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitStart"
                android:src="@drawable/telka" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="312dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="276dp"
                android:layout_marginLeft="52dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="@string/new_2022"
                android:textColor="@color/white"
                android:textSize="60sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.333"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="108dp"
                android:layout_marginTop="350dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/collection"
                android:textColor="@color/white"
                android:textSize="35sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <Button
                android:id="@+id/button"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginLeft="52dp"
                android:gravity="center"
                android:layout_marginTop="500dp"
                android:backgroundTint="@color/button_color"
                android:fontFamily="sans-serif-medium"
                android:text="@string/check_it"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_2022_collection"
                android:textAllCaps="true"
                android:letterSpacing="0.5"
                android:fontFamily="sans-serif-medium"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="850dp"
                />

            <include
                android:id="@+id/list"
                layout="@layout/sneakers_list" />

            <Button
                android:id="@+id/view_all_button"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_below="@id/list"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/black"
                android:fontFamily="sans-serif-medium"
                android:text="@string/view_all"
                android:textAllCaps="true"
                android:textSize="20sp"

                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/followus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_all_button"
                android:layout_marginTop="100dp"
                android:background="@color/black"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/follow_us"
                    android:textAllCaps="true"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="normal"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:layout_marginTop="60dp"
                    android:textSize="16sp"
                    android:letterSpacing="0.5"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_3"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/follow_us_text"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="normal"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:layout_marginStart="25sp"
                    android:layout_marginEnd="25sp"
                    android:textAlignment="center"
                    android:paddingTop="20dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/img_1"
                        android:layout_marginStart="90dp"
                        android:layout_marginEnd="80dp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/img_2"
                        android:layout_marginEnd="102dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="100dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/instagram"
                        android:textAllCaps="true"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="47.5sp"
                        android:layout_marginStart="78sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/facebook"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:layout_marginTop="15dp"
                        />


                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="100dp"
                android:id="@+id/newsletter"
                android:layout_below="@+id/followus"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/newsletter"
                    android:textAllCaps="true"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="normal"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:layout_marginTop="60dp"
                    android:textSize="16sp"
                    android:letterSpacing="0.5"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_3"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/news_text"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="normal"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:layout_marginStart="25sp"
                    android:layout_marginEnd="25sp"
                    android:textAlignment="center"
                    android:paddingTop="20dp"
                    />

                <EditText
                    android:layout_width="320dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:hint="Enter Your Email"
                    android:layout_marginTop="35dp"/>

                <Button
                    android:layout_width="320dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:text="Subscribe"
                    android:textAllCaps="true"
                    android:backgroundTint="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/about_us"
                android:layout_below="@+id/newsletter"
                android:background="@color/black"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/about_us"
                    android:textAllCaps="true"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="normal"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:layout_marginTop="60dp"
                    android:textSize="16sp"
                    android:letterSpacing="0.5"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_3"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/colab"
                    android:textAllCaps="true"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="normal"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:layout_marginTop="60dp"
                    android:textSize="32sp"
                    android:letterSpacing="0.5"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/about_us_text"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="normal"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:layout_marginStart="25sp"
                    android:layout_marginEnd="25sp"
                    android:textAlignment="center"
                    android:paddingTop="20dp"
                    />

                <Button
                    android:layout_width="320dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="40dp"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="bold"
                    android:backgroundTint="@color/black"
                    android:text="@string/learn_more"
                    android:layout_gravity="center"
                    android:layout_marginBottom="88dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/about_us"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="60dp"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.5"
                    android:text="menu"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/img_4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-medium"
                    android:text="Product"
                    android:textSize="14sp"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="18dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-medium"
                    android:text="Sizes"
                    android:textSize="14sp"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="18dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-medium"
                    android:text="GTC"
                    android:textSize="14sp"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="18dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-medium"
                    android:text="Privacy"
                    android:textSize="14sp"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="18dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-medium"
                    android:text="Return and Refunt Policy"
                    android:textSize="14sp"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="18dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-medium"
                    android:text="Jobs"
                    android:textSize="14sp"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="18dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/menu"
                android:background="@color/black">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="16sp"
                    android:text="@string/colab"
                    android:textAllCaps="true"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:layout_marginTop="26dp"
                    android:layout_marginBottom="30dp"
                    android:letterSpacing="0.5"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="16sp"
                    android:text="@string/all_rights_reserved"
                    android:textAllCaps="true"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:layout_marginBottom="33dp"
                    android:letterSpacing="0.5"
                    />

            </LinearLayout>
        </RelativeLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>